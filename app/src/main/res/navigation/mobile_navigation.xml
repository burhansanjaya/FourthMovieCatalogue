<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_movie">

    <fragment
        android:id="@+id/navigation_movie"
        android:name="com.dicoding.fourthmoviecatalogue.ui.movie.MovieFragment"
        android:label="@string/title_movie"
        tools:layout="@layout/fragment_movie" />

    <fragment
        android:id="@+id/navigation_tv"
        android:name="com.dicoding.fourthmoviecatalogue.ui.tv_show.TvFragment"
        android:label="@string/title_tv_show"
        tools:layout="@layout/fragment_tv" />

    <fragment
        android:id="@+id/navigation_favorite_movie"
        android:name="com.dicoding.fourthmoviecatalogue.ui.favorite.MovieFavoriteFragment"
        android:label="@string/title_favorite"
        tools:layout="@layout/fragment_movie_favorite" />

    <fragment
        android:id="@+id/navigation_favorite_tv"
        android:name="com.dicoding.fourthmoviecatalogue.ui.favorite.TvFavoriteFragment"
        android:label="@string/title_favorite"
        tools:layout="@layout/fragment_tv_favorite" />
</navigation>